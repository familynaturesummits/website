<h2>Recent News</h2>
  
  <ul class="entry_list">
    <% @items.each do |item| %>
      <li>
        <%= link_to item.title, refinery.news_item_path(item) %>
        <p>
          <small>Published <%= l(item.publish_date, :format => :long) %></small>
        </p>
        <%= truncate  item.body, :length => 200,
                      :omission => " ... #{link_to 'Read More', refinery.news_item_path(item)}",
                      :preserve_html_tags => true %>
                      <br style="clear:both;"> 
      </li>
    <% end %>
  </ul>
 
