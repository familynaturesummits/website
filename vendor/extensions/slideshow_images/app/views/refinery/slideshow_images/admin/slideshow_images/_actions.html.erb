<ul>
  <% if ::Refinery::SlideshowImages::Admin::SlideshowImagesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.slideshow_images_admin_slideshow_images_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_slideshow_images_admin_slideshow_image_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::SlideshowImages::Admin::SlideshowImagesController.sortable? && ::Refinery::SlideshowImages::SlideshowImage.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Slideshow Images"),
                 refinery.slideshow_images_admin_slideshow_images_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Slideshow Images"),
                 refinery.slideshow_images_admin_slideshow_images_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
