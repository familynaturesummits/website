<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(faculty_member) -%>">
  <span class='title'>
    <%= "#{faculty_member.last_name}, #{faculty_member.first_name}" %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.faculty_members_faculty_member_path(faculty_member),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_faculty_members_admin_faculty_member_path(faculty_member),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.faculty_members_admin_faculty_member_path(faculty_member),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => faculty_member.first_name),
        :method => :delete %>
  </span>
</li>
