<% content_for :body_content_title do %>
  <%= @expertise_area.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @expertise_area.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="expertise_areas">
      <% @expertise_areas.each do |expertise_area| %>
        <li>
          <%= link_to expertise_area.name, refinery.faculty_members_expertise_area_path(expertise_area) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
